<section class="services classic sec-uping">
    <div class="container">
        <div class="service-wrap">
            <div class="row">
                <div class="col-sm-12 col-md-4">
                    <div class="service-section">
                        <div class="title">Генеалогическое древо</div>
                        <p class="subtitle">
                            Сохраните память о поколениях и найдите своих родственников
                        </p>
                        <a href="@Url.Action("GenealogyTree", "Recognize")" class="btn btn btn-default-green-fill">Перейти</a>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4">
                    <div class="service-section">
                        <div class="title">Поиск по фото</div>
                        <p class="subtitle">
                            Ищите людей в социальных сетях с помощью фотографий
                        </p>
                        <a href="@Url.Action("Index","Recognize")" class="btn btn btn-default-green-fill">Перейти</a>
                    </div>
                </div>
                <div class="col-sm-12 col-md-4">
                    <div class="service-section">
                        <div class="plans badge feat bg-green">Новое</div>
                        <div class="title">Запрос архивов</div>
                        <p class="subtitle">
                            Найдите данные о родственниках в открытых банках данных
                        </p>
                        <a href="/search/memorial" class="btn btn btn-default-green-fill">Перейти</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="tipography-ex sec-normal">
    <div class="container">
        <h3 class="testimonials wrapper">Изменить данные аккаунта:</h3>
        <p>Заполните дополнительную информацию о себе</p>
        <form action="@Url.Action("Update", "Profile"))" class="comments-form">
            <div class="multirow">
                @Html.TextBoxFor(x => x.Name, new { placeholder = "Имя", @class = "input tripleline" })
                @Html.TextBoxFor(x => x.Surname, new { placeholder = "Фамилия", @class = "input tripleline" })
                @Html.TextBoxFor(x => x.MiddleName, new { placeholder = "Отчество", @class = "input tripleline" })
            </div>
            <div class="multirow">
                @Html.TextBoxFor(x => x.BirthDate, new { placeholder = "Дата рождения", @class = "input doubleline" })
                @Html.TextBoxFor(x => x.BirthPlace, new { placeholder = "Место рождения", @class = "input doubleline" })
            </div>
            <div class="multirow">
                @Html.TextBoxFor(x => x.MotherId, new { placeholder = "Id матери", @class = "input tripleline" })
                @Html.TextBoxFor(x => x.FatherId, new { placeholder = "Id отца", @class = "input tripleline" })
                @Html.TextBoxFor(x => x.PartnerId, new { placeholder = "Id партнера", @class = "input tripleline" })
            </div>

            <input id="gender" type="number" name="gender" placeholder="Пол" class="input tripleline" value="@Model.Gender" min="0" max="1" step="1">

            <input name="Id" type="hidden" value="@Model.Id" />
            <input id="form-memorial-submit" type="button" class="btn btn-default-green-fill" value="Сохранить">
        </form>
    </div>
</section>
