<div class="top-header">
    <div class="total-grad"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="specs">
                    <div class="">
                        <img src="~/img/avatars/avatar3.png" height="42" alt="">
                    </div>
                </div>
                <div class="wrapper">
                    <div class="heading">@User.Identity.Name <a style="color:#cc8e35 !important" href="@Url.Action("EditForm", "Profile")"><i class="fa fa-pencil" style="font-size:24px"></i></a></i></div>
                    <h3 class="subheding">Премиум-подписка активна до 30.11.2022</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--
