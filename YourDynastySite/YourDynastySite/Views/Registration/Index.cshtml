@model bool

<!-- 
    *******************
    FULL SIGNUP PAGE
    ******************* 
    -->
    <div class="fullrock2 fullrock total-grad-purple">
    <a onclick="window.history.go(-1); return false;" class="closebtn">
        <img src="~/img/closer.svg" class="closer" alt="">
      </a>
      <div class="fullrock-content">
        <section class="pb-100">
            <div class="register contact-us">
                <div class="container">
                    <img src="img/logo.svg" alt="logo" class="logo-footer">
              <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="form-contact sec-grad-white-to-green">
                                <h1 class="subtitle mb-1">Создание нового аккаунта</h1>
                    <p>Заполните поля ниже, чтобы создать аккаунт. Уже зарегистрированы?  
                        <a class="golink" href="/login">Войдите в аккаунт</a>
                    </p>
                                @if (Model)
                                {
                                <mark>Некоторые из введенных данных невалидны или такой аккаунт уже зарегистрирован!</mark>
                                }
                    <form class="comments-form">
                      <input id="name" type="text" name="Login" placeholder="Ваше имя" class="input" required />
                      <input id="email" type="email" name="Email" placeholder="Адрес электронной почты" class="input" required="" />
                      <input type="password" name="Password" placeholder="Введите пароль" class="input" required />
                      <input type="password" name="ConfirmPassword" placeholder="Повторите пароль" class="input" required />
                      <input id="form-submit" type="submit" class="btn btn-default-blue-fill" value="Зарегистрироваться" />
                    </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>